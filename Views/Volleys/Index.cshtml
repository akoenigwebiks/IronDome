@model IEnumerable<IronDome.Models.Volley>

@{
    ViewData["Title"] = "Index";
    string AttackerName = ViewData["AttackerName"]?.ToString()!;
    int AttackerId = (int)ViewData["AttackerId"]!;
}

<h1>Volleys - @AttackerName</h1>

<p>
    <a asp-action="Create" asp-route-attackerid="@AttackerId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LaunchDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LaunchDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
