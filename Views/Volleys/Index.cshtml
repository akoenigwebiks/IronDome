@model IEnumerable<IronDome.Models.VolleyViewModel>

@{
    ViewData["Title"] = "Volleys";
}

<h2 class="text-primary">Volleys Management</h2>

<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Volley.LaunchDate)
            </th>
            <th>Launchers and Ammo Summary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-primary">
                    @Html.DisplayFor(modelItem => item.Volley.LaunchDate)
                </td>
                <td class="text-primary">
                    @foreach (var summary in item.LauncherAmmoSummary)
                    {
                        <span class="badge bg-primary">
                            @($"{summary.LauncherName}")
                        </span>
                        <span class="badge bg-success">
                            @($"{summary.AmmoCount} Ammo")
                        </span>
                        <br/>
                    }
                </td>

                <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a asp-action="Edit" asp-route-id="@item.Volley.Id" asp-route-attackerId="@ViewBag.AttackerId" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Volley.Id" asp-route-attackerId="@ViewBag.AttackerId" class="btn btn-sm btn-info">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Volley.Id" asp-route-attackerId="@ViewBag.AttackerId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-route-attackerId="@ViewBag.AttackerId">
    <button class="btn btn-outline-success">
        Create New
    </button>
</a>
