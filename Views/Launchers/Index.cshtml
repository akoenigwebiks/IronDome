@model IEnumerable<IronDome.Models.Launcher>

@{
    ViewData["Title"] = "Index";
    string AttackerName = ViewData["AttackerName"]?.ToString()!;
    int attackerId = (int)ViewData["AttackerId"]!;

}

<h1>Launchers - @AttackerName</h1>

<p>
    <a asp-controller="Launchers"
       asp-action="Create"
       asp-route-attackerId="@attackerId"
       class="btn btn-primary">
        Create New Launcher
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Range)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Velocity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Range)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Velocity)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete"
                       asp-route-attackerId="@attackerId"
                       asp-route-id="@item.Id"
                       class="btn btn-primary">
                        Remove Launcher
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
